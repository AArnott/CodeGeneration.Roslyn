<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Use plural TargetFrameworks property even with one value so that Nerdbank.MSBuildExtension's multitargeting import is applied. -->
    <TargetFrameworks>netstandard1.3</TargetFrameworks>
    <AssemblyOriginatorKeyFile>..\opensource.snk</AssemblyOriginatorKeyFile>
    <SignAssembly>true</SignAssembly>
    <PackageId>CodeGeneration.Roslyn.BuildTime</PackageId>
    <Description>The build-time development dependency that generates code for a project that consumes code generation attributes.</Description>
  </PropertyGroup>

  <ItemGroup>
    <AdditionalFiles Include="..\stylecop.json">
      <Visible>false</Visible>
    </AdditionalFiles>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="15.1.548" PrivateAssets="all" />
    <PackageReference Include="Nerdbank.MSBuildExtension" Version="0.1.16-beta" PrivateAssets="all" />
  </ItemGroup>

</Project>
