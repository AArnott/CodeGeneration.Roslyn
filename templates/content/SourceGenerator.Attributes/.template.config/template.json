{
  "$schema": "http://json.schemastore.org/template",
  "identity": "CodeGeneration.Roslyn.Templates.AttributesProject",
  "author": "Amadeusz Sadowski",
  "classifications": [
    "SourceGen",
    "Plugin"
  ],
  "name": "CodeGeneration.Roslyn Plugin Attributes Project",
  "shortName": "cgrpluginatts",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "SourceGenerator.Attributes",
  "preferNameDirectory": true,
  "symbols": {
    "cgr-version": {
      "type": "parameter",
      "description": "CodeGeneration.Roslyn toolset version to use in references, such as PackageReference.",
      "datatype": "text",
      "replaces": "$(LocalNuGetVersion)",
      "defaultValue": "*"
    }
  }
}